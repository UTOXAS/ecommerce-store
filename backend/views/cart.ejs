<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <link rel="stylesheet" href="css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/header') %>
        <main>
            <div class="container mt-4">
                <h1 class="text-center my-4">Shopping Cart</h1>
                <div class="row">
                    <% if (cartItems.length===0) { %>
                        <p class="text-center">Your cart is empty.</p>
                        <% } else { %>
                            <% let totalCartPrice=0; %>
                                <% cartItems.forEach(item=> {
                                    let itemTotalPrice = item.price * item.quantity;
                                    totalCartPrice += itemTotalPrice;
                                    %>
                                    <div class="col-md-12 cart-items">
                                        <div class="card mb-3">
                                            <div class="card-body d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h5 class="card-title">
                                                        <%= item.name %>
                                                    </h5>
                                                    <p class="card-text">Pric: $<%= item.price.toFixed(2) %>
                                                    </p>
                                                    <p class="card-text">Quantity: <strong>
                                                            <%= item.quantity %>
                                                        </strong></p>
                                                    <p class="card-text"><strong>Total: $<%= itemTotalPrice.toFixed(2)
                                                                %></strong></p>
                                                    <button class="btn btn-danger"
                                                        onclick="removeFromCart('<%= item.productId %>')">Remove</button>


                                                </div>
                                                <img src="<%= item.image %>" alt="<%= item.name %>"
                                                    class="img-fluid rounded">
                                            </div>
                                        </div>
                                    </div>
                                    <% }) %>

                                        <div class="text-end">
                                            <h4>Total Price: <string>$<%= totalCartPrice.toFixed(2) %>
                                                </string>
                                            </h4>
                                        </div>
                                        <% } %>
                </div>
            </div>

        </main>
        <%- include('partials/footer') %>

            <script>
                const BASE_URL = "<%= baseUrl %>";
                console.log("Base URL:", BASE_URL);
            </script>
            <script src="js/script.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>